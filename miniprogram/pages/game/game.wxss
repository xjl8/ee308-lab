/* wxml初始化布局 */
.tanchuang {
    width: 100%;
}

#ret {
    width: 100%;
    position: fixed;
    top: 20%;
    opacity: 60%
}

#t1 {
    position: fixed;
    top: 30%;
    width: 100%;
    color: yellow;
    font-size: 20px;
    text-align: center;
}

#t2 {
    position: fixed;
    top: 40%;
    width: 100%;
    text-align: center;
    color: yellow;
    font-size: 20px;
}

.container {
    width: 100%;
    height: 100%;
    background-color: wheat;
}

.main {
    width: 100%;
}

.bowl {
    height: 800rpx;
    width: 100%;
}

.bg_img {
    width: 100%;
    position: absolute;
    left: 1rpx;
    top: 130rpx;
}

.btn-box {
    text-align: center;
    margin: 100rpx;
}

.btn-box .btn {
    background: red;
    color: #ffffff;
    border: none;
    border-radius: 10px;
    padding: 10px 20px;
}

/* 骰子动画 */
#redpacket0,
#redpacket1,
#redpacket2,
#redpacket3,
#redpacket4,
#redpacket5 {
    top: 0px;
    left: 0px;
    width: 10%;
    height: 10%;
    position: absolute;
}